<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/coffeebackground"
    tools:context="com.example.administrator.a2cmfinal.Activity.OrderActivity">


    <RelativeLayout
        android:id="@+id/totalOrderLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_weight="2">

        <TextView
            android:text="결제 메뉴"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:background="#ffa500"
            android:id="@+id/textView4"
            android:layout_alignParentEnd="true" />

        <ListView
            android:id="@+id/orderList"
            android:layout_below="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/howPayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:layout_weight="3">
        <TextView
            android:text="결제 방식"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:background="#ffa500"
            android:id="@+id/textView5"
            android:layout_alignParentEnd="true" />

        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:text="신용카드"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="1" />

            <RadioButton
                android:text="무통장입금"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1" />

            <RadioButton
                android:text="PAYCO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1" />
        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <RelativeLayout
            android:id="@+id/totalPayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="최종 금액"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp"
                android:background="#ffa500"
                android:id="@+id/textView6"
                android:layout_alignParentEnd="true" />

            <TextView
                android:padding="5dp"
                android:text="총 주문 금액"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:id="@+id/textView7" />

            <TextView
                android:padding="5dp"
                android:text="3,000 원"
                android:gravity="right"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView13"
                android:layout_toEndOf="@+id/textView7" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orderBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="결제하기"
                android:textSize="14sp"/>

        </RelativeLayout>

    </LinearLayout>





</LinearLayout>
