<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.a2cmfinal.Activity.StoreInfoActivity"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/sliderImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        custom:pager_animation="Default"
        custom:auto_cycle="false"
        custom:pager_animation_span="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storeInfoText"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderImage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:text="매장이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:background="#ffa500"
            android:id="@+id/textView8" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:id="@+id/textLocal" />

        <TextView
            android:text="주소"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="#ffa500"
            android:id="@+id/textView41" />

        <TextView
            android:text="TextView"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:id="@+id/textAddr" />

        <TextView
            android:text="영업시간"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="#ffa500"
            android:id="@+id/textView42" />

        <TextView
            android:text="TextView"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:id="@+id/textTime" />
    </LinearLayout>

    <Button
        android:text="전화걸기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnCall"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
