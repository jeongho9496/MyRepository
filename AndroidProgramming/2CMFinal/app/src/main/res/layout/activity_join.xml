<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffeelogin3"
    tools:context="com.example.administrator.a2cmfinal.Activity.JoinActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="120dp"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coffeeicon"
            android:id="@+id/imageView2"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:text="- JOIN -"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="3dp"
        android:background="#ffa500"
        android:layout_below="@+id/relativeLayout2"
        android:id="@+id/joinText"
        android:gravity="center_horizontal"
        android:layout_alignEnd="@+id/view"
        android:layout_alignStart="@+id/view1" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:background="#FFa500"
        android:layout_below="@+id/joinText"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_join_id"
            android:textColor="@android:color/black"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:hint="아이디를 입력하세요"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view1"
        android:layout_below="@+id/view"
        android:background="#FFa500">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:id="@+id/edit_join_email"
            android:hint="이메일을 입력하세요"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/view2"
        android:layout_below="@+id/view1"
        android:background="#FFa500">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textStyle="bold"
            android:id="@+id/edit_join_password"
            android:hint="비밀번호를 입력하세요"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view3"
        android:padding="5dp"
        android:layout_below="@+id/view2"
        android:background="#FFa500">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textStyle="bold"
            android:id="@+id/edit_join_tel"
            android:hint="전화번호를 입력하세요"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:layout_marginTop="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_join"
        android:id="@+id/btnJoin"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:clickable="true"/>


</RelativeLayout>
