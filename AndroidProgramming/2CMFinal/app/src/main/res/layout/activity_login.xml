<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.a2cmfinal.LoginActivity"
    android:background="@android:color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coffeeicon"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_marginTop="230dp">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/join_id"
            android:inputType="text"
            android:layout_gravity="center"
            android:hint="아이디를 입력하세요"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view1"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/join_repassword"
            android:layout_below="@+id/edit_join_password"
            android:layout_alignLeft="@+id/edit_join_password"
            android:layout_alignStart="@+id/edit_join_password"
            android:layout_alignRight="@+id/edit_join_password"
            android:layout_alignEnd="@+id/edit_join_password"
            android:hint="비밀번호를 입력하세요"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_email_login"
        android:id="@+id/btn_login"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/view1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="onLoginClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_join"
        android:id="@+id/btn_join"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/btn_login"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_alignStart="@+id/btn_login" />

</RelativeLayout>
